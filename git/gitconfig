[color]
    ui = auto
[color "diff"]
    meta = cyan
    frag = magenta
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    a = add .
    br = branch -vv
    s = status
    sb = status -sb
    co = checkout
    c = commit
    cm = commit -m
    cl = clone
    uci = reset HEAD^
    authors = shortlog -sn
    d = diff
    f = fetch
    ls = ls-files
    m = merge
    ps = push
    plo = pull origin
    plu = pull upstream
    rao = remote add origin
    rv = remote -v
    rs = remote show
    wdiff = diff --word-diff=color
    wshow = show --word-diff=color
    lg = log --graph --all
[push]
    default=current
[merge]
    log=true
	tool = opendiff
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
